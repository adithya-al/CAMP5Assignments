@model Professor
@{
}
<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <form id="createProfessorForm" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--Professor  Register Name-->
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">
                    First Name<span class="text-danger"></span>
                </label>
                <input asp-for="FirstName" class="form-control" id="fname" autocomplete="off" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <!--Last Name -->
            <div class="form-group">
                <label asp-for="LastName" class="control-label">
                    Last Name<span class="text-danger"></span>
                </label>
                <input asp-for="LastName" class="form-control" id="lname" autocomplete="off" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <!--Salary-->
            <div class="form-group">
                <label asp-for="Salary" class="control-label">
                    Salary<span class="text-danger">*</span>
                </label>
                <input asp-for="Salary" class="form-control" type="number" id="salary" autocomplete="off" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <!--DOB DATE-->
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label">
                    Date of birth<span class="text-danger">*</span>
                </label>
                <input asp-for="DateOfBirth" class="form-control" id="dob" type="date" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <!--Gender-->
            <div class="form-group">
                <label asp-for="Gender" class="control-label bold-label"></label>
                <div>
                    <input type="radio" asp-for="Gender" id="genderMale"
                           value="Male" />
                    <label for="genderMale">Male</label>
                </div>
                <div>
                    <input type="radio" asp-for="Gender" name="Gender" id="genderFemale"
                           value="Female" />
                    <label for="genderFemale">Female</label>
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <!--Join DATE-->
            <div class="form-group">
                <label asp-for="JoinDate" class="control-label">
                    Date of Join<span class="text-danger">*</span>
                </label>
                <input asp-for="JoinDate" class="form-control" id="dob" type="date" />
                <span asp-validation-for="JoinDate" class="text-danger"></span>
            </div>
            <!--Hod Name -->
            <div class="form-group">
                <label asp-for="HOD" class="control-label">
                    HOD <span class="text-danger"></span>
                </label>
                <input asp-for="HOD" class="form-control" id="regno" autocomplete="off" />
                <span asp-validation-for="HOD" class="text-danger"></span>
            </div>
            
            <!--Department Id hidden-->
            <div class="form-group">
                <input asp-for="DepartmentId" type="hidden" id="selectedDepartmentId" />
            </div>
            <!--Department Name dropdown-->
            <div class="form-group">
                <label asp-for="DepartmentId" class="control-label bold-label">
                    Department
                    <span class="text-danger">*</span>
                </label>
                <select asp-for="DepartmentId" id="departmentList" class="form-control">
                    <option value="">--Select Department</option>
                    @foreach (var department in ViewBag.Departments)
                    {
                        
                        <option value="@department.DepartmentId">
                            @department.DepartmentName
                        </option>
                    }
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>

            <!--submit-->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        //DepartmentId --departmentList --Change
        document.getElementById('departmentList').addEventListener('change',function(){
            var selectDepartmentName = this.value;

            //Assign to hidden field
            document.getElementById('selectedDepartmentId').value = selectDepartmentName;
        });
    </script>
}

