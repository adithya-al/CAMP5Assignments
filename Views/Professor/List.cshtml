@*
  Show List of Professor
*@

@model IEnumerable<Professor>
@{
    ViewData["Title"] = "List of Professor";

}


<h2>List of Professors</h2>
<!--Add Professor-->
<a asp-controller="Professor" asp-action="Create" class="btn btn-Outline">Add Professor</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProfessorId)
            </th>          
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.JoinDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HOD)
            </th>          
            <th>Department Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProfessorId)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JoinDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HOD)
                </td>

                <td>
                    @item.Department?.DepartmentName
                </td>
                @*
            <td>
            @Html.DisplayFor(modelItem=>item.Department.DepartmentName)
            </td>
    *@
                <td>
                    <a asp-controller="Professor" asp-action="Edit"
                       asp-route-ProfessorId="@item.ProfessorId"
                       class="btn btn-secondary">Edit</a>

                    <a asp-controller="Professor " asp-action="Delete"
                       asp-route-id="@item.ProfessorId"
                       class="btn btn-danger">Remove</a>
                </td>
            </tr>


            
        }
    </tbody>

</table>


